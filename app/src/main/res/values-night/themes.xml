<resources>
    <!-- Base application theme. -->
    <style name="Theme.GithubApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/github_black</item>
        <item name="colorPrimaryVariant">@color/github_black_light</item>
        <item name="colorOnPrimary">@color/github_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/github_blue</item>
        <item name="colorSecondaryVariant">@color/github_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="editTextColor">@color/github_white</item>

        <item name="background">@color/black</item>
    </style>

    <style name="Github_Default">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/github_white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/dejavusansmono</item>
    </style>
</resources>